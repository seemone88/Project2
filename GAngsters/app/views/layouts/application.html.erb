<!DOCTYPE html>
<html>
<head>
  <title>PasswordExample</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default">
    <div class="container">
      <img class="ga" alt="Brand" src="http://culturelabx.com/wp-content/uploads/2014/10/general-assembly-logo.png"><span style="font-size: 40px !important; color: #000000;">ng</span>
      <div class="navbar-header">
        <a class="navbar-brand" href=""></a>
    </div>
  </div>
  </nav>
  
  <div class="container">
    <% flash.each do |name, message| %>
         <div class="flash-message flash-message-<%= name %>">
        <%= message %>
       </div>
    <% end %>
    <% if current_user %>
    <h3>Signed in as <%= current_user.name.capitalize %></h3>
    <ul class="nav nav-tabs">
      <li role="presentation"><%= link_to 'My Posts', user_path(current_user)%></li>
      <li role="presentation"><%= link_to 'New Post', new_post_path%></li>
      <li role="presentation"><%= link_to 'View Users', users_path%></li>
      <li role="presentation"><%= link_to 'Logout', session_path(session), method: :delete%></li>
    </ul>
    <%end%>

    <%= yield %>
    </form>
  </div>
</body>
</html>
