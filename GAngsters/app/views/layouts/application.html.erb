<!DOCTYPE html>
<html>
<head>
  <title>PasswordExample</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% flash.each do |name, message| %>
     <div class="flash-message flash-message-<%= name %>">
    <%= message %>
   </div>
<% end %>
<% if current_user %>
  <p>Hello, <%= current_user.name %></p>
  <%= link_to 'Logout', session_path(session), method: :delete%>
  <%= link_to 'My Posts', user_path(current_user)%>
  <%= link_to 'Other Users', users_path%>
  <%= link_to 'New Post', new_post_path%>
<%else%>
  <%= link_to "Please Login", new_session_path, class: "btn btn-default" %>
<%end%>

<%= yield %>
</form>
</body>
</html>
